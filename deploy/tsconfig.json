{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "../.next/types/deploy",
    "baseUrl": ".",
    "noEmit": false,
    "paths": {
      "@/*": ["../src/*"],
      "@components/*": ["../src/components/*"],
      "@lib/*": ["../src/lib/*"],
      "@styles/*": ["../src/styles/*"],
      "@utils/*": ["../src/utils/*"],
      "@types/*": ["./next/types/*"]
    }
  },
  "include": [
    "./next/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "../.next",
    "../out"
  ]
}
